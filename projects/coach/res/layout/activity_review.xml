<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_review"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center"
        android:text="快评价你的"
        android:textColor="@color/text_black"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/cut_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal" >

                <com.ifenduo.coach.view.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res/com.ifenduo.coach"
                    android:id="@+id/ri_head_review"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_head"
                    app:riv_corner_radius="6dip" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dip" >

                    <TextView
                        android:id="@+id/tv_name_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="王二錘"
                        android:textColor="@color/text_black"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/tv_num_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="学员号：12345685"
                        android:textColor="@color/text_gray"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical"
                    android:paddingRight="10dip" >

                    <TextView
                        android:id="@+id/tv_date_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"
                        android:singleLine="true"
                        android:text="5月19日"
                        android:textColor="@color/text_gray"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_time_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"
                        android:singleLine="true"
                        android:text="16:00-17:00"
                        android:textColor="@color/text_gray"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="30dip"
                android:gravity="left"
                android:paddingLeft="10dip"
                android:singleLine="true"
                android:text="练习科目"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />

            <GridView
                android:id="@+id/gv_train"
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:horizontalSpacing="5dip"
                android:numColumns="3"
                android:verticalSpacing="5dip" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="30dip"
                android:gravity="left"
                android:paddingLeft="10dip"
                android:singleLine="true"
                android:text="训练评价（多选）"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />

            <com.ifenduo.coach.view.MyGridView
                android:id="@+id/gv_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:horizontalSpacing="5dip"
                android:numColumns="auto_fit"
                android:verticalSpacing="5dip" />

            <TextView
                android:id="@+id/tv_review_review"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="60dip"
                android:background="@drawable/brand_blue_btn_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="评价我"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>