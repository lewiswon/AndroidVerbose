<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAFAFA"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_card_view_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/card_bg"
        android:clickable="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:orientation="vertical"
                android:paddingLeft="10dip" >

                <TextView
                    android:id="@+id/tv_date_item_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5月30日"
                    android:textColor="@color/text_black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_train_type_item_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="曲线行驶"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_time_item_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dip"
                android:text="15:00-16:00"
                android:textColor="@color/text_gray"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:orientation="vertical"
                android:paddingRight="10dip" >

                <TextView
                    android:id="@+id/tv_project_item_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="场地训练"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_coach_item_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="王大锤教练"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <com.ifenduo.coach.view.MyGridView
            android:id="@+id/gv_problem_train"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:horizontalSpacing="5dip"
            android:numColumns="auto_fit"
            android:verticalSpacing="5dip" />
    </LinearLayout>

</RelativeLayout>