<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dip"
    android:clickable="true"
    android:background="@drawable/list_item_selector"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/iv_down_pic"
    android:layout_width="70dip"
    android:src="@mipmap/medicine_description_home_icon"
    android:layout_marginRight="10dip"
    android:layout_height="70dip" />
    <TextView
        android:id="@+id/tv_down_name"
        android:layout_marginTop="10dip"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/iv_down_pic"
        android:layout_height="wrap_content"
        android:text="药品说明书（离线包）"/>
    <ProgressBar
        android:id="@+id/pb_down_progress"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/iv_down_pic"
        android:layout_below="@id/tv_down_name"
        android:progress="70"
        android:secondaryProgress="100"
        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="24.5kb/s"
        android:layout_below="@id/pb_down_progress"
        android:layout_toRightOf="@id/iv_down_pic"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="112M"
        android:layout_alignParentRight="true"
        android:layout_below="@id/pb_down_progress"
        android:layout_height="wrap_content" />
</RelativeLayout>